<div class='row justify-content-center'>
    <div class='col-md-8'>
        <h2>Add an Animal to the Darabase</h2>
        <div class='card'>
            <div class='card-header'>Add Animal</div>
            <div class='card-body'>
                <form class='form-horizontal' method='post' action='/entry-form'>
                    <div class='form-group'>
						<label for='zoo' class='cols-sm-2 control-label'>Home Zoo</label>
						<div class='cols-sm-10'>
							<div class='input-group'>
								<span class='input-group-addon'><i
										class='fa fa-building fa'
										aria-hidden='true'
									></i></span>
								<input
									type='text'
									class='form-control'
									name='zoo'
									id='zoo'
									placeholder='Enter Home Zoo'
									required
								/>
							</div>
						</div>
					</div>
					<div class='form-group'>
						<label for='scientificName' class='cols-sm-2 control-label'>Scientific Name</label>
						<div class='cols-sm-10'>
							<div class='input-group'>
								<span class='input-group-addon'><i
										class='fa fa-leaf fa'
										aria-hidden='true'
									></i></span>
								<input
									type='text'
									class='form-control'
									name='scientificName'
									id='scientificName'
									placeholder='Enter Scientific Name'
									required
								/>
							</div>
						</div>
					</div>
					<div class='form-group'>
						<label for='commonName' class='cols-sm-2 control-label'>Common Name</label>
						<div class='cols-sm-10'>
							<div class='input-group'>
								<span class='input-group-addon'><i
										class='fa fa-tag fa'
										aria-hidden='true'
									></i></span>
								<input
									type='text'
									class='form-control'
									name='commonName'
									id='commonName'
									placeholder='Enter Common Name'
									required
								/>
							</div>
						</div>
					</div>
					<div class='form-group'>
						<label for='givenName' class='cols-sm-2 control-label'>Given Name</label>
						<div class='cols-sm-10'>
							<div class='input-group'>
								<span class='input-group-addon'><i
										class='fa fa-paw fa'
										aria-hidden='true'
									></i></span>
								<input
									type='text'
									class='form-control'
									name='givenName'
									id='givenName'
									placeholder='Enter Given Name'
									required
								/>
							</div>
						</div>
					</div>
                    <div class='form-group'>
                        <label class='cols-sm-2 control-label'>Gender</label>
                        <div class='cols-sm-10'>
                            <div class='form-check'>
                                <input class='form-check-input' type='radio' name='gender' id='male' value='Male' required>
                                <label class='form-check-label' for='male'>
                                    Male
                                </label>
                            </div>
                            <div class='form-check'>
                                <input class='form-check-input' type='radio' name='gender' id='female' value='Female' required>
                                <label class='form-check-label' for='female'>
                                    Female
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class='form-group'>
						<label for='dateOfBirth' class='cols-sm-2 control-label'>Date of Birth</label>
						<div class='cols-sm-10'>
							<div class='input-group'>
								<span class='input-group-addon'><i
										class='fa fa-calendar fa'
										aria-hidden='true'
									></i></span>
								<input
									type='date'
									class='form-control'
									name='dateOfBirth'
									id='dateOfBirth'
									required
								/>
							</div>
						</div>
					</div>
                    <div class='form-group'>
						<label for='age' class='cols-sm-2 control-label'>Age</label>
						<div class='cols-sm-10'>
							<div class='input-group'>
								<span class='input-group-addon'><i
										class='fa fa-hourglass fa'
										aria-hidden='true'
									></i></span>
								<input
									type='number'
									class='form-control'
									name='age'
									id='age'
									placeholder='Enter Age'
									required
								/>
							</div>
						</div>
					</div>

                    <div class='form-group'>
                        <label class='cols-sm-2 control-label'>Is Transportable?</label>
                        <div class='cols-sm-10'>
                            <div class='form-check'>
                                <input class='form-check-input' type='radio' name='isTransportable' id='yes' value='true' required>
                                <label class='form-check-label' for='yes'>
                                    Avaiable
                                </label>
                            </div>
                            <div class='form-check'>
                                <input class='form-check-input' type='radio' name='isTransportable' id='no' value='false' required>
                                <label class='form-check-label' for='no'>
                                   Unavailable
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class='form-group'>
                        <button
                            type='submit'
                            class='btn btn-primary btn-lg btn-block login-button'
                        >Add Animal to Database</button>
                        <button
                            type='reset'
                            class='btn btn-primary btn-lg btn-block login-button'
                        >Reset Form</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>